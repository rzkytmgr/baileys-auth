{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowArbitraryExtensions": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "newLine": "crlf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "include": [
    "src"
  ]
}